@page
@model PantherPeManagement.Pages.PantherProfile.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
@if (Model.ErrorMessage != "You have no permission to access this function!")
{
<h4>PantherProfile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreatePantherProfileRequest.PantherTypeId" class="control-label"></label>
                <select asp-for="CreatePantherProfileRequest.PantherTypeId" class ="form-control" asp-items="ViewBag.PantherTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CreatePantherProfileRequest.PantherName" class="control-label"></label>
                <input asp-for="CreatePantherProfileRequest.PantherName" class="form-control" />
                <span asp-validation-for="CreatePantherProfileRequest.PantherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatePantherProfileRequest.Weight" class="control-label"></label>
                <input asp-for="CreatePantherProfileRequest.Weight" class="form-control" />
                <span asp-validation-for="CreatePantherProfileRequest.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatePantherProfileRequest.Characteristics" class="control-label"></label>
                <input asp-for="CreatePantherProfileRequest.Characteristics" class="form-control" />
                <span asp-validation-for="CreatePantherProfileRequest.Characteristics" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatePantherProfileRequest.Warning" class="control-label"></label>
                <input asp-for="CreatePantherProfileRequest.Warning" class="form-control" />
                <span asp-validation-for="CreatePantherProfileRequest.Warning" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
}
else
{
    <div class="text-center mt-4">
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
